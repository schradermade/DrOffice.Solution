@{
  Layout = "_Layout";
}

@using DrOffice.Models;
@model List<DrOffice.Models.Doctor>;

<h1>Doctors</h1>

@if (@Model.Count == 0)
{
  <h3>No courses have been added to database</h3>
}

@foreach (Doctor doctor in Model)
{
  <li>@Html.ActionLink($"{doctor.Name}", "Details", new { id = doctor.DoctorId })</li>
}

<p>@Html.ActionLink("Add a new Doctor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
